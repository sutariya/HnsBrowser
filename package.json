{
  "name": "hns-browser",
  "version": "1.0.0",
  "description": "A modern browser for Handshake domains",
  "homepage": "./",
  "author": "Rahul Sutariya",
  "license": "MIT",
  "keywords": [
    "handshake",
    "hns",
    "browser",
    "decentralized",
    "web"
  ],
  "main": "obfuscated/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js --dev",
    "protect": "node build-secure.js",
    "start:prod": "electron obfuscated/main.js",
    "test:build": "npm run protect && npm run start:prod",
    "build:win": "npm run protect && electron-builder --win --x64",
    "build:mac": "npm run protect && electron-builder --mac dmg",
    "build:linux": "npm run protect && electron-builder --linux AppImage",
    "dist": "npm run protect && electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dns-packet": "^5.6.1",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.rahul.hnsbrowser",
    "productName": "HNS Browser",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "obfuscated/**/*",
      "src/preload.js",
      "src/index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}