{
  "name": "hns-browser",
  "version": "1.0.0",
  "description": "A modern browser for Handshake domains",
  "main": "main.js",
  "homepage": "./",
  "author": "Rahul Sutariya",
  "license": "MIT",
  "keywords": [
    "handshake",
    "hns",
    "browser",
    "decentralized",
    "web"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dns-packet": "^5.6.1",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.rahul.hnsbrowser",
    "productName": "HNS Browser",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
